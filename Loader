-- [ LOU HUB - LOADER OFFICIEL MIS À JOUR ]
local function getGlobalTable()
    return typeof(getfenv().getgenv) == "function" and typeof(getfenv().getgenv()) == "table" and getfenv().getgenv() or _G
end

-- 1. Configuration de l'identité du script
getGlobalTable()["GameName"] = "Pressure" 

-- 2. Chargement de l'interface (Fire-Lib)
-- C'est ce qui crée le menu violet que tu aimes
local libUrl = "https://raw.githubusercontent.com/InfernusScripts/Null-Fire/main/Core/Source/Main.lua"
local successLib, libCode = pcall(function() return game:HttpGet(libUrl) end)

if successLib then
    getgenv()._FIRELIB = loadstring(libCode)()
else
    warn("Impossible de charger l'interface.")
    return
end

-- 3. Création de la fenêtre principale
-- On utilise le titre exact de tes photos
local window = getgenv()._FIRELIB:AddWindow({
    Title = "NullFire - Pressure",
    Theme = "Dark"
})

-- 4. Chargement de ton MainCode personnalisé (avec les vrais codes extraits)
-- C'est ici qu'on appelle ton fichier GitHub avec le No Damage, Bruteforce, etc.
local mainUrl = "https://raw.githubusercontent.com/Loubakugo/PersonalPlayerData.json/refs/heads/main/MainCode.lua"
local successMain, mainFunc = pcall(function() 
    return loadstring(game:HttpGet(mainUrl))() 
end)

if successMain and type(mainFunc) == "function" then
    -- On passe la fenêtre au MainCode pour qu'il crée les onglets
    mainFunc(window)
    print("Lou Hub : Chargement réussi avec les fonctions Fire Hub !")
else
    warn("Erreur dans le fichier MainCode.lua : " .. tostring(mainFunc))
end
